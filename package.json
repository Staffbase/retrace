{
  "name": "retrace",
  "productName": "RE-Trace",
  "version": "1.0.0",
  "description": "Minimal tool for end-of-day braindumps.",
  "main": "./.webpack/main",
  "repository": "git@github.com:Staffbase/retrace.git",
  "author": "Frank Adler <frank.adler@staffbase.com>",
  "homepage": "https://github.com/Staffbase/retrace",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "https://github.com/Staffbase/retrace/blob/master/LICENSE"
    }
  ],
  "scripts": {
    "clean": "rm -rf out .webpack",
    "start": "yarn clean && electron-forge start",
    "lint": "eslint src/**/*.ts src/**/*.tsx ./*.js",
    "fix": "eslint src/**/*.ts src/**/*.tsx ./*.js --fix",
    "package": "yarn clean && electron-forge package",
    "make": "yarn clean && electron-forge make",
    "publish": "yarn clean && electron-forge publish"
  },
  "dependencies": {
    "dompurify": "^2.0.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.1.1",
    "lodash.throttle": "^4.1.1",
    "menubar": "^8.0.1",
    "mousetrap": "^1.6.5",
    "nanoid": "^2.1.11",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.50",
    "@electron-forge/maker-deb": "6.0.0-beta.50",
    "@electron-forge/maker-dmg": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "6.0.0-beta.50",
    "@electron-forge/maker-zip": "6.0.0-beta.50",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.50",
    "@electron-forge/publisher-github": "^6.0.0-beta.50",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/dompurify": "^2.0.1",
    "@types/lodash.throttle": "^4.1.6",
    "@types/mousetrap": "^1.6.3",
    "@types/nanoid": "^2.1.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.0",
    "electron": "^8.3.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^4.0.4",
    "node-loader": "^0.6.0",
    "prettier": "^2.0.4",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-loader": "^7.0.5",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon.icns"
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "retrace"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Frank Adler",
              "homepage": "https://adfr.io"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Staffbase",
              "name": "retrace"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
